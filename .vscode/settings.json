{
	"chat.agent.maxRequests": 50,
	"chat.agent.thinkingStyle": "collapsed",
	"chat.agent.thinking.collapsedTools": "off",
	"chat.useAgentSkills": true,
	"chat.agentSkillsLocations": {
		".github/skills": true,
		"~/.github/skills": true,
	},
	"files.associations": {
		"*.css": "tailwindcss"
	},
	"chat.tools.terminal.autoApprove": {
		"bun": true,
		"git add": true,
		"git commit": true,
		"mkdir": true
	},
	"git.branchProtectionPrompt": "alwaysCommit"
}
